{
  "name": "lights-out",
  "version": "1.0.0-alpha.2",
  "description": "Automatic dark mode for your web app.",
  "type": "module",
  "main": "dist/dynamic.js",
  "types": "dist/dynamic.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/dynamic.d.ts",
        "default": "./dist/dynamic.js"
      },
      "require": {
        "types": "./dist/cjs/dynamic.d.cts",
        "default": "./dist/cjs/dynamic.cjs"
      },
      "default": "./dist/dynamic.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "engineStrict": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "build": "duel",
    "prepack": "node --run build"
  },
  "keywords": [
    "automatic",
    "dynamic",
    "dark mode",
    "dark theme"
  ],
  "files": [
    "dist"
  ],
  "author": "Morgan Ney <morganney@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morganney/lights-out.git"
  },
  "bugs": {
    "url": "https://github.com/morganney/lights-out/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@knighted/duel": "^2.1.4",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "colord": "^2.9.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}
